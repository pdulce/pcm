<?xml version="1.0" encoding="ISO-8859-1"?>

<service:service-group 
	xmlns:service="http://pcm.framework.org/service"
	xmlns:xs="http://www.w3.org/2001/XMLSchema" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://pcm.framework.org/service services.xsd">

   <service name="GestionarImportacionesDatosInvertia" profile="ADMINISTRADOR, CONSULTOR_UTE">

	<action event="query" submitError="GestionarImportacionesDatosInvertia.query"
		submitSucces="GestionarImportacionesDatosInvertia.query">

		<viewComponent>

			<form columns="3" title="Importaciones desde Invertia">

				<fieldViewSet entitymodel="invertia_import"
					nameSpace="invertia_import">
					<fieldView mappingTo="2" />
					<fieldView mappingTo="3" />
					<fieldView separator="br" />
					<fieldView separator="br" />
				</fieldViewSet>
			</form>

			<grid orderDirection="desc" defaultOrderField="invertia_import.4"
				eventsRegistered="create,update, delete">

				<fieldViewSet entitymodel="invertia_import"
					nameSpace="invertia_import">
					<fieldView mappingTo="1" />
					<fieldView mappingTo="2" />
					<fieldView mappingTo="3" />
					<fieldView mappingTo="4" />
				</fieldViewSet>
			</grid>

		</viewComponent>
	</action>

	<action event="create" submitError="GestionarImportacionesDatosInvertia.create"
		submitSucces="GestionarImportacionesDatosInvertia.query" strategyPre="facturacionUte.strategies.StrategyImportacionInvertiaDATA">

		<viewComponent>
			<form columns="8" title="Importación">
				<fieldViewSet entitymodel="invertia_import"
					nameSpace="invertia_import">
					<fieldset legend="Datos Importación">
						<fieldView mappingTo="2" size="40" />
						<fieldView separator="br" />
						<fieldView separator="br" />
						<fieldView mappingTo="5" />
						<fieldView separator="br" />
						<fieldView separator="br" />
						<fieldView mappingTo="3" hidden="true" />
						<fieldView separator="br" />
						<fieldView separator="br" />
						<fieldView mappingTo="4" hidden="true" />
					</fieldset>
				</fieldViewSet>
			</form>
		</viewComponent>
	</action>


	<action event="delete" submitError="GestionarImportacionesDatosInvertia.delete"
		submitSucces="GestionarImportacionesDatosInvertia.query">

		<viewComponent>
			<form columns="8" title="Importación">
				<fieldViewSet entitymodel="invertia_import"
					nameSpace="invertia_import">
					<fieldset legend="Datos Importación">
						<fieldView mappingTo="1" size="4" editable="false" />
						<fieldView mappingTo="2" size="25" editable="false" />
						<fieldView separator="br" />
						<fieldView separator="br" />
						<fieldView mappingTo="3" editable="false" />
						<fieldView mappingTo="4" editable="false" />
						<fieldView separator="br" />
						<fieldView separator="br" />
						<fieldView mappingTo="5" editable="false" />
					</fieldset>
				</fieldViewSet>
			</form>
		</viewComponent>
	</action>

	<action event="update" submitError="GestionarImportacionesDatosInvertia.update"
		submitSucces="GestionarImportacionesDatosInvertia.update" strategyPre="facturacionUte.strategies.StrategyImportacionInvertiaDATA">

		<viewComponent>
			<form columns="3" title="Datos Importación">
				<fieldViewSet entitymodel="invertia_import"
					nameSpace="invertia_import">
					<fieldView mappingTo="1" editable="false" />
					<fieldView mappingTo="2" editable="false" />
					<fieldView separator="br" />
					<fieldView separator="br" />
					<fieldView mappingTo="3" editable="false" />
					<fieldView mappingTo="4" editable="false" />
					<fieldView separator="br" />
					<fieldView separator="br" />
					<fieldView separator="br" />
					<fieldView mappingTo="5" editable="true" />
					<fieldView separator="br" />
					<fieldView separator="br" />
				</fieldViewSet>
			</form>
		</viewComponent>
	</action>


</service>

</service:service-group>
