<?xml version="1.0" encoding="ISO-8859-1"?>

<service:service-group
xmlns:service="http://pcm.framework.org/service"
	xmlns:xs="http://www.w3.org/2001/XMLSchema" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://pcm.framework.org/service services.xsd">
	
	<service name="GestionResponsablesCentros" profile="ADMINISTRADOR, CONSULTOR_UTE">

		<action event="query" submitError="GestionResponsablesCentros.query"
			submitSucces="GestionResponsablesCentros.query">

			<viewComponent>

				<form columns="3" title="Gestion de responsables funcionarios de centros">

					<fieldViewSet entitymodel="responsableCentro"
						nameSpace="responsableCentro">
						<fieldView mappingTo="1" />
						<fieldView mappingTo="2" />
						<fieldView mappingTo="3" />
						
						<fieldView separator="br" />
						<fieldView separator="br" />
												
						<fieldView mappingTo="4" type="select">
							<optionValues selectionMultiple="true" entitymodel="servicio" descrMappingTo="2">
							</optionValues>
						</fieldView>													
						<fieldView mappingTo="5" />
						<fieldView mappingTo="6" type="select">
							<optionValues selectionMultiple="true" entitymodel="edificio" descrMappingTo="2">
							</optionValues>
						</fieldView>
						
						<fieldView separator="br" />
						<fieldView separator="br" />
						
						<fieldView mappingTo="7" />
					</fieldViewSet>
				</form>

				<grid title="Listado de responsable funcionario en los centros" orderDirection="asc" defaultOrderField="responsableCentro.2"
					eventsRegistered="detail,update,delete,create">

					<fieldViewSet entitymodel="responsableCentro"
						nameSpace="responsableCentro">
						<fieldView mappingTo="1" />
						<fieldView mappingTo="2" />
						<fieldView mappingTo="3" />
						<fieldView mappingTo="4" type="select">
							<optionValues entitymodel="servicio" descrMappingTo="2">
							</optionValues>
						</fieldView>
						<fieldView mappingTo="5" />
						<fieldView mappingTo="6" type="select">
							<optionValues entitymodel="edificio" descrMappingTo="2">
							</optionValues>
						</fieldView>
						<fieldView mappingTo="7" />
					</fieldViewSet>

				</grid>

			</viewComponent>

		</action>

		<action event="delete" submitError="GestionResponsablesCentros.delete"
			submitSucces="GestionResponsablesCentros.query">

			<viewComponent>
				<form columns="3" title="Borrado Responsable Centro">
					<fieldViewSet entitymodel="responsableCentro"
						nameSpace="responsableCentro">
						<fieldView mappingTo="1" editable="false" />
						<fieldView mappingTo="2" editable="false" />
						<fieldView mappingTo="3" editable="false" />
						<fieldView mappingTo="4" type="select" editable="false">
							<optionValues entitymodel="servicio" descrMappingTo="2">
							</optionValues>
						</fieldView>
						<fieldView separator="br" />
						<fieldView separator="br" />						
						<fieldView mappingTo="5" editable="false" />
						<fieldView mappingTo="6" type="select" editable="false">
							<optionValues entitymodel="edificio" descrMappingTo="2">
							</optionValues>
						</fieldView>
						<fieldView mappingTo="7" editable="false" />
					</fieldViewSet>
				</form>
			</viewComponent>
		</action>

		<action event="detail" submitError="GestionResponsablesCentros.query"
			submitSucces="GestionResponsablesCentros.detail">

			<viewComponent>
				<form columns="3" title="Detalle Responsable Centro">
					<fieldViewSet entitymodel="responsableCentro"
						nameSpace="responsableCentro">
						<fieldView mappingTo="1" editable="false" />
						<fieldView mappingTo="2" editable="false" />
						<fieldView mappingTo="3" editable="false" />
						<fieldView mappingTo="4" type="select" editable="false">
							<optionValues entitymodel="servicio" descrMappingTo="2">
							</optionValues>
						</fieldView>
						<fieldView separator="br" />
						<fieldView separator="br" />						
						
						<fieldView mappingTo="5" editable="false" />
						<fieldView mappingTo="6" type="select" editable="false">
							<optionValues entitymodel="edificio" descrMappingTo="2">
							</optionValues>
						</fieldView>
						<fieldView mappingTo="7" editable="false" />
					</fieldViewSet>
				</form>
			</viewComponent>
		</action>

		<action event="create" submitError="GestionResponsablesCentros.create"
			submitSucces="GestionResponsablesCentros.query">

			<viewComponent>
				<form columns="3" title="Alta Formulario Responsable Centro">
					<fieldViewSet entitymodel="responsableCentro"
						nameSpace="responsableCentro">
						<fieldView mappingTo="2" editable="true" />
						<fieldView mappingTo="3" editable="true" />
						<fieldView mappingTo="4" type="select" editable="true">
							<optionValues entitymodel="servicio" descrMappingTo="2">
							</optionValues>
						</fieldView>
						<fieldView separator="br" />
						<fieldView separator="br" />
						<fieldView mappingTo="5" editable="true" />
						<fieldView mappingTo="6" type="select">
							<optionValues entitymodel="edificio" descrMappingTo="2">
							</optionValues>
						</fieldView>
						<fieldView mappingTo="7" editable="true" />
					</fieldViewSet>
				</form>
			</viewComponent>
		</action>

		<action event="update" submitError="GestionResponsablesCentros.update"
			submitSucces="GestionResponsablesCentros.update">

			<viewComponent>
				<form columns="3" title="Edicion Responsable Centro">
					<fieldViewSet entitymodel="responsableCentro"
						nameSpace="responsableCentro">
						<fieldView mappingTo="1" editable="false" />
						<fieldView mappingTo="2" editable="true" />
						<fieldView mappingTo="3" editable="true" />
						<fieldView mappingTo="4" type="select" editable="true">
							<optionValues entitymodel="servicio" descrMappingTo="2">
							</optionValues>
						</fieldView>
						<fieldView separator="br" />
						<fieldView separator="br" />
						<fieldView mappingTo="5" editable="true" />
						<fieldView mappingTo="6" type="select">
							<optionValues entitymodel="edificio" descrMappingTo="2">
							</optionValues>
						</fieldView>
						<fieldView mappingTo="7" editable="true" />
					</fieldViewSet>
				</form>
				
			</viewComponent>
		</action>
	</service>

	
</service:service-group>