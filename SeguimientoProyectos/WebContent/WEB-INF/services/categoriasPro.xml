<?xml version="1.0" encoding="ISO-8859-1"?>

<service:service-group 
	xmlns:service="http://pcm.framework.org/service"
	xmlns:xs="http://www.w3.org/2001/XMLSchema" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://pcm.framework.org/service services.xsd">

    <service name="ConsultaCategorias" profile="ADMINISTRADOR, CONSULTOR_UTE">

		<action event="query" submitError="ConsultaCategorias.query"
			submitSucces="ConsultaCategorias.query">

			<viewComponent>

				<form columns="53" title="Consulta categorias profesionales">

					<fieldViewSet entitymodel="categoria_profesional"
						nameSpace="categoria_profesional">
						<fieldView mappingTo="1" size="4" />
						<fieldView mappingTo="2" size="10" />
						<fieldView separator="br" />
						<fieldView separator="br" />
						<fieldView mappingTo="3" size="10" />
						<fieldView mappingTo="4" size="4" />
					</fieldViewSet>
				</form>

				<grid title="Listado categorias profesionales" orderDirection="asc" eventsRegistered="detail">
					<fieldViewSet entitymodel="categoria_profesional"
						nameSpace="categoria_profesional">
						<fieldView mappingTo="1" />
						<fieldView mappingTo="2" />
						<fieldView mappingTo="3" />
						<fieldView mappingTo="4" />
					</fieldViewSet>
				</grid>

			</viewComponent>
		</action>

		<action event="detail" submitError="ConsultaCategorias.query"
			submitSucces="ConsultaCategorias.detail">

			<viewComponent>
				<form columns="53" title="Categoria profesional">
					<fieldViewSet entitymodel="categoria_profesional"
						nameSpace="categoria_profesional">
						<fieldView mappingTo="1" size="4" editable="false" />
						<fieldView mappingTo="2" size="10" editable="false" />
						<fieldView separator="br" />
						<fieldView separator="br" />
						<fieldView mappingTo="3" size="10" editable="false" />
						<fieldView mappingTo="4" size="4" editable="false" />
					</fieldViewSet>
				</form>
			</viewComponent>
		</action>

	</service>
	
</service:service-group>