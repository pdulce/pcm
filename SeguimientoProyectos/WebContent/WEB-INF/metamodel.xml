		<entry key="logAppFile"
			value="#serverPath#\\log\\logSeguimientoUTE.xml"></entry>
		<entry key="downloadDir"
			value="#serverPath#\\downloads\\"></entry>
		<entry key="uploadDir"
			value="#serverPath#\\uploads\\"></entry>
