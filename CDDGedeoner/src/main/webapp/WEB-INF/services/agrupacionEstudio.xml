<?xml version="1.0" encoding="ISO-8859-1"?>

<service:service-group 
	xmlns:service="http://pcm.framework.org/service"
	xmlns:xs="http://www.w3.org/2001/XMLSchema" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://pcm.framework.org/service services.xsd">

    <service name="GestionAgrupaEstudios" profile="ADMINISTRADOR, CONSULTOR_UTE">

		<action event="query" submitError="GestionAgrupaEstudios.query"
			submitSucces="GestionAgrupaEstudios.query" strategyPre="gedeoner.strategies.FiltrarPreAgrupaciones">

			<viewComponent>

				<form columns="3" title="Consulta Grupos">

					<fieldViewSet entitymodel="agrupacionEstudio"	nameSpace="agrupacionEstudio">
						<fieldset legend="Servicio">
							<fieldView separator="br" />
							<fieldView separator="br" />
							<fieldView mappingTo="2"/>
							<fieldView mappingTo="3"/>
							<fieldView mappingTo="4" type="select" editable="true" size="6">
								<optionValues entitymodel="unidadOrg" selectionMultiple="true" 
									descrMappingTo="2">
								</optionValues>
							</fieldView>
							<fieldView separator="br" />
							<fieldView separator="br" />
						</fieldset>
					</fieldViewSet>
				</form>

				<grid title="Listado Grupos" orderDirection="asc" eventsRegistered="update, create, delete">
					<fieldViewSet entitymodel="agrupacionEstudio"
						nameSpace="agrupacionEstudio">
						<fieldView mappingTo="1" hidden="true"/>
						<fieldView mappingTo="2" />
						<fieldView mappingTo="3" />
						<fieldView mappingTo="4" type="select" editable="true">
							<optionValues entitymodel="unidadOrg" descrMappingTo="2">
							</optionValues>
						</fieldView>					
					</fieldViewSet>
				</grid>

			</viewComponent>
		</action>

		<action event="delete" submitError="GestionAgrupaEstudios.query"
			submitSucces="GestionAgrupaEstudios.delete">

			<viewComponent>
				<form columns="2" title="Grupo">
					<fieldViewSet entitymodel="agrupacionEstudio"	nameSpace="agrupacionEstudio">
						<fieldset legend="Servicio">
							<fieldView separator="br" />
							<fieldView separator="br" />
							<fieldView mappingTo="1" editable="false" />
							<fieldView mappingTo="2" editable="false" />
							<fieldView mappingTo="3" editable="false" />
							<fieldView mappingTo="4" type="select" editable="false"  size="6">
								<optionValues entitymodel="unidadOrg" descrMappingTo="2">
								</optionValues>
							</fieldView>
							<fieldView separator="br" />
							<fieldView separator="br" />
						</fieldset>
					</fieldViewSet>
				</form>
			</viewComponent>
		</action>
		
		<action event="create" submitError="GestionAgrupaEstudios.create"
			submitSucces="GestionAgrupaEstudios.create">

			<viewComponent>
				<form columns="2" title="Grupo">
				
					
						<fieldViewSet entitymodel="agrupacionEstudio"	nameSpace="agrupacionEstudio">
							<fieldset legend="Servicio">
								<fieldView separator="br" />						
								<fieldView mappingTo="2" editable="true" />
								<fieldView mappingTo="3" editable="true" />
								<fieldView mappingTo="4" type="select" editable="true"  size="6">
									<optionValues entitymodel="unidadOrg" descrMappingTo="2">
									</optionValues>
								</fieldView>
								<fieldView separator="br" />
								<fieldView separator="br" />	
							</fieldset>
						</fieldViewSet>
					
				</form>
			</viewComponent>
		</action>
		
		<action event="update" submitError="GestionAgrupaEstudios.update"
			submitSucces="GestionAgrupaEstudios.update">

			<viewComponent>
				<form columns="2" title="Grupo">
					<fieldViewSet entitymodel="agrupacionEstudio" nameSpace="agrupacionEstudioForm">
					
						<fieldset legend="Servicio">
							<fieldView separator="br" />	
							<fieldView mappingTo="1" hidden="true" />
							<fieldView mappingTo="2" editable="true" />
							<fieldView mappingTo="3" editable="true" />
							<fieldView mappingTo="4" type="select" editable="true"  size="6">
								<optionValues entitymodel="unidadOrg" descrMappingTo="2">
								</optionValues>
							</fieldView>
							<fieldView separator="br" />
							<fieldView separator="br" />
						</fieldset>
					</fieldViewSet>
				</form>
				
				<grid title="Aplicaciones en cartera" dependsOf="agrupacionEstudioForm" orderDirection="asc"
					defaultOrderField="aplicativo.1" eventsRegistered="" serviceRef="GestionAgrupaEstudios">
				
					<fieldViewSet entitymodel="aplicativo" nameSpace="aplicativo">
						<fieldView mappingTo="1" hidden="true" />					
						<fieldView mappingTo="2" editable="false"  />
						<fieldView mappingTo="5" editable="false"  />
						<fieldView mappingTo="3" hidden="true" />
					</fieldViewSet>
					
				</grid>
				
			</viewComponent>
		</action>

	</service>
	
</service:service-group>