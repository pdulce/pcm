<?xml version="1.0" encoding="ISO-8859-1"?>

<service:service-group 
	xmlns:service="http://pcm.framework.org/service"
	xmlns:xs="http://www.w3.org/2001/XMLSchema" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://pcm.framework.org/service services.xsd">

    <service name="GestionSubdirecciones" profile="ADMINISTRADOR, CONSULTOR_UTE">

		<action event="query" submitError="GestionSubdirecciones.query"
			submitSucces="GestionSubdirecciones.query">

			<viewComponent>

				<form columns="3" title="Consulta Áreas">

					<fieldViewSet entitymodel="subdireccion" nameSpace="subdireccion">
						<fieldset legend="subdireccion">
							<fieldView separator="br" />
							<fieldView separator="br" />
							<fieldView mappingTo="2"  size="25"/>							
							<fieldView mappingTo="3"  size="45"/>
							<fieldView mappingTo="4" type="select" editable="true" size="6">
								<optionValues entitymodel="unidadOrg" selectionMultiple="true" 
									descrMappingTo="2">
								</optionValues>
							</fieldView>
							<fieldView separator="br" />
						</fieldset>
					</fieldViewSet>
				</form>

				<grid title="Listado Áreas" orderDirection="asc" eventsRegistered="update, create, delete">
					<fieldViewSet entitymodel="subdireccion"
						nameSpace="subdireccion">
						<fieldView mappingTo="1" hidden="true"/>
						<fieldView mappingTo="2" />
						<fieldView mappingTo="3" />						
						<fieldView mappingTo="4" type="select" editable="true">
							<optionValues entitymodel="unidadOrg" descrMappingTo="2">
							</optionValues>
						</fieldView>					
					</fieldViewSet>
				</grid>

			</viewComponent>
		</action>

		<action event="delete" submitError="GestionSubdirecciones.query"
			submitSucces="GestionSubdirecciones.delete">

			<viewComponent>
				<form columns="2" title="Área">
					<fieldViewSet entitymodel="subdireccion"	nameSpace="subdireccion">
						<fieldset legend="subdireccion">
							<fieldView separator="br" />
							<fieldView separator="br" />
							<fieldView mappingTo="1" editable="false"   size="15"/>
							<fieldView mappingTo="2" editable="false"   size="25"/>
							<fieldView mappingTo="3" editable="false"   size="45"/>
							<fieldView mappingTo="4" type="select" editable="false" size="6">
								<optionValues entitymodel="unidadOrg" descrMappingTo="2">
								</optionValues>
							</fieldView>
							<fieldView separator="br" />
						</fieldset>
					</fieldViewSet>
				</form>
			</viewComponent>
		</action>
		
		<action event="create" submitError="GestionSubdirecciones.create"
			submitSucces="GestionSubdirecciones.create">

			<viewComponent>
				<form columns="2" title="Área">
				
					
						<fieldViewSet entitymodel="subdireccion"	nameSpace="subdireccion">
							<fieldset legend="subdireccion">
								<fieldView separator="br" />						
								<fieldView mappingTo="2" editable="true"   size="25"/>
								<fieldView mappingTo="3" editable="true"   size="45"/>
								<fieldView mappingTo="4" type="select" editable="true" size="6">
									<optionValues entitymodel="unidadOrg" descrMappingTo="2">
									</optionValues>
								</fieldView>
								<fieldView separator="br" />	
							</fieldset>
						</fieldViewSet>
					
				</form>
			</viewComponent>
		</action>
		
		<action event="update" submitError="GestionSubdirecciones.update"
			submitSucces="GestionSubdirecciones.update">

			<viewComponent>
				<form columns="2" title="Área">
					<fieldViewSet entitymodel="subdireccion"	nameSpace="subdireccForm">
					
						<fieldset legend="subdireccion">
							<fieldView separator="br" />	
							<fieldView mappingTo="1" hidden="true" />
							<fieldView mappingTo="2" editable="true"   size="25"/>
							<fieldView mappingTo="3" editable="true"   size="45"/>
							<fieldView mappingTo="4" type="select" editable="true" size="6">
								<optionValues entitymodel="unidadOrg" descrMappingTo="2">
								</optionValues>
							</fieldView>
							<fieldView separator="br" />
						</fieldset>
					</fieldViewSet>
				</form>
				
				<grid title="Subáreas" dependsOf="subdireccForm" orderDirection="asc"
					defaultOrderField="servicio.2" eventsRegistered="" serviceRef="GestionSubdirecciones">
				
					<fieldViewSet entitymodel="servicio" nameSpace="servicio">
						<fieldView mappingTo="1" hidden="true" />					
						<fieldView mappingTo="2" editable="false"  />
						<fieldView mappingTo="3" hidden="true" />
						<fieldView mappingTo="4" hidden="true"  />						
					</fieldViewSet>
					
				</grid>
												
			</viewComponent>
		</action>

	</service>
	
</service:service-group>
